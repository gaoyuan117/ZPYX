<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orgener"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jzbwlkj.zpyx.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orgener"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:text="登录"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_login_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="46dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_login_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/img_login_sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/xingbie"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:background="@mipmap/shurukuangbg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/shouji"
                android:drawablePadding="16dp"
                android:hint="输入手机号"
                android:inputType="phone"
                android:maxLength="11" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@mipmap/yanzhengmbg"
                android:padding="6dp"
                android:text=""
                android:textColor="@color/text_color"
                android:visibility="invisible" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/shurukuangbg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_login_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/duanxin"
                android:drawablePadding="16dp"
                android:hint="短信验证码"
                android:inputType="number"
                android:maxLength="6" />

            <TextView
                android:id="@+id/tv_login_getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@mipmap/yanzhengmbg"
                android:padding="6dp"
                android:text="获取验证码"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:background="@mipmap/denglubg"
            android:gravity="center"
            android:padding="8dp"
            android:text="登录"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>
