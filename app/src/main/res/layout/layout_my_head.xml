<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orgener"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/img_my_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@mipmap/shezhi" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_my_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/img_my_set"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:id="@+id/ll1_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_my_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_my_sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/xingbie" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1_my"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/img_my_jf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/yuanjiaojuxing2"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_my_jf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/jifen2"
                    android:drawablePadding="2dp"
                    android:textSize="12sp"
                    android:text="积分：5" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/img_my_qd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:background="@mipmap/yuanjiaojuxing2"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/qiandao"
                    android:drawablePadding="2dp"
                    android:textSize="12sp"
                    android:text="每日签到" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_my_fbrz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/faburizhi"
            android:gravity="center"
            android:textSize="14sp"
            android:text="发布日志" />

        <TextView
            android:id="@+id/tv_my_tjsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:textSize="14sp"
            android:drawableTop="@mipmap/tuijiansahngpin"
            android:gravity="center"
            android:text="推荐商品" />

        <TextView
            android:id="@+id/tv_my_wdrz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:textSize="14sp"
            android:drawableTop="@mipmap/woderizhi"
            android:gravity="center"
            android:text="我的日志" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/tv_my_yqhy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/yaoqinghaoyou"
            android:gravity="center"
            android:text="邀请好友" />

    </LinearLayout>

</LinearLayout>
